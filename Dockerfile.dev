FROM node:18-alpine

# Install bash for Claude Code
RUN apk add --no-cache bash

# Install Chromium and dependencies for headless E2E testing
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    git

# Set Chromium path for Playwright
ENV CHROME_BIN=/usr/bin/chromium-browser
ENV CHROMIUM_BIN=/usr/bin/chromium-browser

# Set SHELL for Claude Code
ENV SHELL=/bin/bash

# Install Angular CLI globally (needed for ng new)
RUN npm install -g @angular/cli@14

# Install Claude Code CLI globally
RUN npm install -g @anthropic-ai/claude-code

# Set working directory
WORKDIR /app

# Note: package.json will be volume-mounted from host
# If package.json exists, install dependencies via entrypoint or manually

# Expose Angular dev server port
EXPOSE 4205

# Keep container running
CMD ["tail", "-f", "/dev/null"]
